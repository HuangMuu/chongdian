.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  padding-top: 44px;
  background: #F6F6F6;
  display: flex;
  align-items: center;
  z-index: 99;
}

.location {
  position: absolute;
  left: 24rpx;
  bottom: 14rpx;
  display: flex;
  align-items: center;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.city-name {
  font-size: 28rpx;
  color: #333;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
}

.container {
  margin-top: calc(88rpx + 44px);
  padding: 20rpx;
  background: #F6F6F6;
}

.banner {
  width: 100%;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.menu-card {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx 0;  /* 修改这里，去掉左右内边距 */
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-grid {
  width: 100%;
  display: flex;
  justify-content: space-around;  /* 修改为 space-around，让间距更均匀 */
  align-items: center;
  padding: 0 20rpx;  /* 添加内边距来控制菜单项的间距 */
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.menu-grid-secondary {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  padding: 20rpx;
}

.secondary {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 0;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.menu-text {
  font-size: 24rpx;
  color: #333;
}

.charging-status {
  width: 100%;
  background: #58ee58;
  padding: 30rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
  box-sizing: border-box;
}

.charging-text {
  font-size: 28rpx;
  color: #03974b;
}

.arrow-icon {
  width: 50rpx;
  height: 50rpx;
  color: #07c160;
}

.station-card {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.station-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.station-name {
  font-size: 32rpx;
  font-weight: bold;
}

.station-port {
  font-size: 24rpx;
  color: #999;
}

.station-address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.price-list {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.power-range {
  font-size: 26rpx;
  color: #333;
}

.price {
  font-size: 26rpx;
  color: #07C160;
}

.station-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.more-info {
  font-size: 24rpx;
  color: #999;
}

.map-link {
  display: flex;
  align-items: center;
  color: #07C160;
  font-size: 24rpx;
}

.map-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.icon-green {
  color: #58ee58;
  /* 如果是使用纯色图标，可以添加以下滤镜效果 */
  filter: hue-rotate(85deg) brightness(1.2);
}